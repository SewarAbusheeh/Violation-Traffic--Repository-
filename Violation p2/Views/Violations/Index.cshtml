@model IEnumerable<Violation_p2.Models.Violation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Violationdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fineamount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ispaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Violationtype)
            </th>
            <th>
                Email
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Violationdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fineamount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ispaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Violationtype.ViolationtypeId)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.User.Email)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ViolationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ViolationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ViolationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
