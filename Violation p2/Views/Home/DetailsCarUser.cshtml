@model Vehicle

@{
    ViewData["Title"] = "DetailsCarUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Car details <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Car Details</h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section ftco-car-details">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="car-details">
                    <div class="img rounded" style="background-image: url('@Url.Content("/ImagesTodisplay/"+@Model.Imagepath)');"></div>
                    <div class="text text-center">
                        <span class="subheading"> @Model.Type</span>
                        <h2> @Model.Model</h2>
                        <h2>@Model.Color </h2>
                        <h2> @Model.Licenseplate</h2>
                        <h2> @Model.Licenseexpirydate</h2>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <span class="alert-warning" style="font-size:larger;">@ViewBag.Message</span>
            @foreach (var violation in Model.Violations)
            {
                <div class="col-md d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services">
                        <div class="media-body py-md-4">
                            <div class="d-flex mb-3 align-items-center">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-dashboard"></span></div>
                                <div class="text">
                                    <h3 class="heading mb-0 pl-3">

                                        Violationtype
                                        <span class="text-muted"> </span>
                                        <span>@violation.Violationtype.Description</span>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services">
                        <div class="media-body py-md-4">
                            <div class="d-flex mb-3 align-items-center">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-pistons"></span></div>
                                <div class="text">
                                    <h3 class="heading mb-0 pl-3">
                                        Violationdate
                                        <span>@violation.Violationdate</span>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services">
                        <div class="media-body py-md-4">
                            <div class="d-flex mb-3 align-items-center">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-car-seat"></span></div>
                                <div class="text">
                                    <h3 class="heading mb-0 pl-3">
                                        Fineamount
                                        <span>@violation.Fineamount</span>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services">
                        <div class="media-body py-md-4">
                            <div class="d-flex mb-3 align-items-center">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-backpack"></span></div>
                                <div class="text">
                                    <h3 class="heading mb-0 pl-3">
                                        Basefineamount
                                        <span>@violation.Violationtype.Basefineamount</span>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services">
                        <div class="media-body py-md-4">
                            <div class="d-flex mb-3 align-items-center">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-diesel"></span></div>
                                <div class="text">
                                    @if (Context.Session.GetInt32("UserId").HasValue)

                                    {
                                        @if (violation.Ispaid == true)
                                        {
                                            <h3 class="heading mb-0 pl-3">
                                                Pay
                                                @* 	<span>     <a asp-controller="Payments" disabled asp-action="InitiatePayment" asp-route-id="@violation.ViolationId" class="btn btn-secondary py-2 ml-1">Pay</a>  </span> *@
                                                <span>Your Violation has been Paied</span>
                                            </h3>
                                        }
                                        else
                                        {
                                            <h3 class="heading mb-0 pl-3">
                                                Pay
                                                @* 	<span>     <a asp-controller="Payments" disabled asp-action="InitiatePayment" asp-route-id="@violation.ViolationId" class="btn btn-secondary py-2 ml-1">Pay</a>  </span> *@
                                                <span>     <a asp-controller="Payments" asp-action="InitiatePayment" asp-route-id="@violation.ViolationId" class="btn btn-secondary py-2 ml-1">Pay</a>  </span>
                                            </h3>
                                        }

                                    }
                                    else
                                    {

                                        <h3 class="heading mb-0 pl-3">
                                            Pay
                                            <span>     <a asp-controller="RegisterLogin" asp-action="Login" class="btn btn-secondary py-2 ml-1">LoginToPay</a>  </span>
                                        </h3>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>




