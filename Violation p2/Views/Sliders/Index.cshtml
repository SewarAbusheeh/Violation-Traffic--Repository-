@model IEnumerable<Violation_p2.Models.Slider>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imagepath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagepath1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caption1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caption2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caption3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src=@Url.Content("~/ImagesTodisplay/"+item.Imagepath) width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagepath1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caption1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caption2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caption3)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SliderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SliderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SliderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
