@model IEnumerable<Violation_p2.Models.Violation>

@{
    ViewData["Title"] = "AnnualReport";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AnnualReport</h2>

<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />
<table class="table example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Violationdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fineamount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ispaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Violationtype)
            </th>
            <th>User</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Violationdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fineamount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ispaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Licenseplate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Violationtype.Description)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.User.Username)
                </td>
        </tr>
}
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(function () {
        $('.example').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5']
        });
    });</script>
