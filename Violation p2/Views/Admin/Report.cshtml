<div class="title_right example">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
        <form asp-action="Search" asp-controller="Admin" method="post">
            <div class="row">
                <div class="col-md-5 col-sm-5 col-xs-5">
                    <input type="date" class="form-control" name="StartTime" placeholder="Start Date">
                </div>
                <div class="col-md-5 col-sm-5 col-xs-5">
                    <input type="date" class="form-control" name="EndTime" placeholder="End Date">
                </div>
                <div class="col-md-2 col-sm-2 col-xs-2">
                    <button class="btn btn-default" type="submit">GO!</button>
                </div>
            </div>
        </form>
    </div>
</div>




<div class="title_right">
    <div class="col-md-7 col-sm-7 col-xs-12 form-group pull-right top_search">
        <form asp-action="MonthlyReport" asp-controller="Admin">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-4">
                    <input class="form-control" name="year" placeholder="Enter The Year">
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4">
                    <input class="form-control" name="month" placeholder="Enter The Month">
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4">
                    <button class="btn btn-default btn-block" type="submit">Generate Monthly Report</button>
                </div>
            </div>
        </form>
    </div>
</div>



<div class="title_right">
    <div class="col-md-6 col-sm-6 col-xs-12 form-group pull-right top_search">
        <form asp-action="AnnualReport" asp-controller="Admin" class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <input class="form-control" name="year" placeholder="Enter The Year">
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
                <button class="btn btn-default btn-block" type="submit">Generate Annual Report</button>
            </div>
        </form>
    </div>
</div>








